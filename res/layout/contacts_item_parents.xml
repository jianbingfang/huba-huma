<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contacts_item_height"
    android:layout_marginLeft="@dimen/search_box_horizontal_padding"
    android:background="@color/main_bg"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/head_portrait"
        android:layout_width="@dimen/portrait_size"
        android:layout_height="@dimen/portrait_size"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:src="@drawable/default_portrait"
        android:contentDescription="@string/app_name"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/head_portrait">
        
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="8"
            android:textSize="18sp"
            android:text="陈丽"
            android:textColor="@color/white"/>
        
        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:maxLength="12"
            android:textSize="14sp"
            android:text="小玉子母亲"
            android:textColor="@color/contacts_remark"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        
        <ImageButton 
            android:id="@+id/btn_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@drawable/send_message"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"/>
        
        <ImageButton 
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@drawable/call"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"/>
        
    </LinearLayout>

</RelativeLayout>
