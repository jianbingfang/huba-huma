<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/tag_height_half"
                android:topRightRadius="@dimen/tag_height_half"
                android:bottomLeftRadius="@dimen/tag_height_half"
                android:bottomRightRadius="@dimen/tag_height_half">
            </corners>
            
            <stroke
                android:width="1dp" 
                android:color="@color/tag_bg" 
                android:dashWidth="4dp" 
                android:dashGap="4dp"/>
        </shape>
    </item>
</selector>